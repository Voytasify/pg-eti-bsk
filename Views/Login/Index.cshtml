@{
    ViewBag.Title = "Supreme Airways";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @role = "form", @class = "form-horizontal" }))
{
    <div class="form-group">
        <label class="control-label col-sm-4">Użytkownik</label>
        <div class="col-sm-4">
            <input type="text" name="username" class="form-control" placeholder="Wpisz nazwę użytkownika" required />
        </div>
        <div class="col-sm-4"></div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4">Hasło</label>
        <div class="col-sm-4">
            <input type="password" name="password" class="form-control" placeholder="Wpisz hasło" required />
        </div>
        <div class="col-sm-4"></div>
    </div>
    <div class="form-group">
        <div class="col-sm-4"></div>
        <div class="col-sm-8">
            <button type="submit" class="btn btn-default">Zaloguj</button>
        </div>
    </div>
}

@if (ViewBag.ErrorMsg != null)
{
    <p class="alert alert-warning">@ViewBag.ErrorMsg</p>
}

@if (ViewBag.LogoutMsg != null)
{
    <p class="alert alert-info">@ViewBag.LogoutMsg</p>
}
